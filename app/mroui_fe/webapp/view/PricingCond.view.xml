<mvc:View controllerName="com.ferre.mrouife.controller.PricingCond"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.f"
    xmlns:l="sap.ui.layout"
    xmlns:u="sap.ui.unified"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:smartTable="sap.ui.comp.smarttable">
    <Page showHeader="false" enableScrolling="true" class="sapUiNoContentPadding" showNavButton="false">
        <content>
            <Panel expandable="true" headerText="Filter Bar" class="sapUiNoContentPadding">
                <content>
                    <smartFilterBar:SmartFilterBar id="smartFilterBar"
                        entitySet="PricingConditions" useVariantManagement="false"/>
                </content>
            </Panel>

            <smartTable:SmartTable entitySet="PricingConditions" id="priceSmartTab"
                smartFilterId="smartFilterBar" useExportToExcel="true" beforeExport="onBeforeExport"
                useTablePersonalisation="true" header="Vendor List Items"
                showRowCount="true" useVariantManagement="false"
                enableAutoBinding="true" class="sapUiResponsiveContentPadding"
                tableType="ResponsiveTable" demandPopin="true" enableAutoColumnWidth="true" 
                initiallyVisibleFields="manufacturerCode,manufacturerCodeDesc,localManufacturerCode,localManufacturerCodeDesc,
                    country,countryDesc"/>
        </content>
    </Page>
</mvc:View>