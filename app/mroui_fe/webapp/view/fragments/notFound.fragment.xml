<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form">
	<Dialog id="dialogNotFound" afterClose="onAfterClose" contentHeight="auto" contentWidth="auto" showHeader="false" class="dialogLanguage">
		<HBox justifyContent="Center" width="100%" class="borderBottom">
			<Title id="titleText" text="{i18n>notFound}" titleStyle="H2" class="arvoBold brown sapUiTinyMarginTop"/>
		</HBox>
		<Panel width="100%" height="100%" class="backgroundGrey">
			<form:SimpleForm editable="true">
				<form:content>
				<Text id="nameText" text="{i18n>notFound.text}" />
				</form:content>
			</form:SimpleForm>
		</Panel>
	</Dialog>
</core:FragmentDefinition>